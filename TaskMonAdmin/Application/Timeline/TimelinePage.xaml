<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="White"
    Title="Загально"
    x:Class="TaskMonAdmin.TimelinePage"
    x:DataType="viewmodels:TimelinePageViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    xmlns:viewmodels="clr-namespace:TaskMonAdmin.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Padding="20"
        VerticalOptions="Center">

        <lvc:CartesianChart
            HeightRequest="300"
            IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
            Series="{Binding Series}"
            XAxes="{Binding XAxes}"
            YAxes="{Binding YAxes}" />

        <Label
            FontAttributes="Italic"
            FontSize="14"
            HorizontalOptions="Center"
            Margin="20,0"
            Text="* Цей графік побудовано з припущенням, що завдання були розподілено рівномірно, та у порядку, зазаначеному в силабусі." />
    </VerticalStackLayout>
</ContentPage>