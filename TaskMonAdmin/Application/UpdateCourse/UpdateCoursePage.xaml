<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BackgroundColor="White"
    Title="Оновлення курсу"
    x:Class="TaskMonAdmin.UpdateCoursePage"
    x:DataType="viewModels:UpdateCoursePageViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:viewModels="clr-namespace:TaskMonAdmin.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Padding="20"
        Spacing="20"
        VerticalOptions="Center">

        <Label
            FontSize="18"
            HorizontalOptions="Center"
            Text="Оновіть назву курсу"
            TextColor="#49454F" />

        <material:TextField
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            Text="{Binding CourseTitle}"
            Title="Назва курсу"
            WidthRequest="300" />

        <Button
            BackgroundColor="#6750A4"
            Command="{Binding UpdateCourseCommand}"
            HorizontalOptions="Center"
            Text="Оновити"
            TextColor="White"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>